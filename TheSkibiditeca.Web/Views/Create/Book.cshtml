@model TheSkibiditeca.Web.Models.Entities.Book
@using TheSkibiditeca.Web.Models.Entities

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1 class="text-light">Agregar nuevo libro</h1>
    <hr />
    <div class="row text-center justify-content-center form-group-container">
        <div class="col-md-4 text-light">
            <form asp-action="View">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group my-3">
                    <label asp-for="Title" class="control-label">Título</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group my-3">
                    <label asp-for="CategoryId" class="control-label">Categoría</label>
                    <select asp-for="CategoryId" class="form-control">
                        <option value="" selected disabled>Selecciona una categoría</option>
                        @{
                            foreach(Category cat in ViewBag.Categories)
                            {
                                <option value="@cat.CategoryId">@cat.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group my-3">
                    <label asp-for="Description" class="control-label">Descripción</label>
                    <textarea asp-for="Description" class="form-control" ></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group my-3">
                    <label asp-for="CoverImageUrl" class="control-label">URL de la portada</label>
                    <input asp-for="CoverImageUrl" class="form-control" />
                    <span asp-validation-for="CoverImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group my-3">
                    <label asp-for="BookAuthors" class="control-label">Autores</label>
                    <input asp-for="BookAuthors" class="form-control" />
                    <span asp-validation-for="BookAuthors" class="text-danger"></span>
                </div>

                <div class="form-group my-3">
                    <label asp-for="TotalCopies" class="control-label">Cantidad de copias</label>
                    <input asp-for="TotalCopies" class="form-control" />
                    <span asp-validation-for="TotalCopies" class="text-danger"></span>
                </div>

                <div class="form-group my-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


