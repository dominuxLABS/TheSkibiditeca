                                </svg>
                            </div>
                            <div class="detail-content">
                                <h5>Fecha de Préstamo</h5>
                                <p>@ViewBag.Loan.LoanDate.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="detail-item">
                            <div class="detail-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-minus" viewBox="0 0 16 16">
                                    <path d="M5.5 9.5A.5.5 0 0 1 6 9h4a.5.5 0 0 1 0 1H6a.5.5 0 0 1-.5-.5" />
                                    <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5M1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4z" />
                                </svg>
                            </div>
                            <div class="detail-content">
                                <h5>Fecha de Devolución Esperada</h5>
                                <p>@ViewBag.Loan.ExpectedReturnDate.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="detail-item">
                            <div class="detail-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                                </svg>
                            </div>
                            <div class="detail-content">
                                <h5>Estado</h5>
                                <p>
                                    @switch(@ViewBag.Loan.Status) {
                                        case LoanStatusType.Pending:
                                            <span class="badge bg-success">Pendiente</span>
                                            break;
                                        case LoanStatusType.Active:
                                            <span class="badge bg-success">Activo</span>
                                            break;
                                        case LoanStatusType.Returned:
                                            <span class="badge bg-info">Devuelto</span>
                                            break;
                                        case LoanStatusType.Overdue:
                                            <span class="badge bg-danger">Vencido</span>
                                            break;
                                        case LoanStatusType.Lost:
                                            <span class="badge bg-secondary">Perdido</span>
                                            break;
                                        default:
                                            <span class="badge bg-warning">@ViewBag.Loan.Status</span>
                                            break;
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                
                <div class="row">
                    @if(ViewBag.Loan.ActualReturnDate != null) {
                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-check" viewBox="0 0 16 16">
                                        <path d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0" />
                                        <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5M1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4z" />
                                    </svg>
                                </div>
                                <div class="detail-content">
                                    <h5>Fecha de devoluci�n Real</h5>
                                    <p>@ViewBag.Loan.ActualReturnDate.ToString("dd/MM/yyyy")</p>
                                </div>
                            </div>
                        </div>
                    }

                    @if(ViewBag.Loan.ExpectedReturnDate < DateTime.Now) {
                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cash-coin" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M11 15a4 4 0 1 0 0-8 4 4 0 0 0 0 8m5-4a5 5 0 1 1-10 0 5 5 0 0 1 10 0" />
                                        <path d="M9.438 11.944c.047.596.518 1.06 1.363 1.116v.44h.375v-.443c.875-.061 1.386-.529 1.386-1.207 0-.618-.39-.936-1.09-1.1l-.296-.07v-1.2c.376.043.614.248.671.532h.658c-.047-.575-.54-1.024-1.329-1.073V8.5h-.375v.45c-.747.073-1.255.522-1.255 1.158 0 .562.378.92 1.007 1.066l.248.061v1.272c-.384-.058-.639-.27-.696-.563h-.668zm1.36-1.354c-.369-.085-.569-.26-.569-.522 0-.294.216-.514.572-.578v1.1zm.432.746c.449.104.655.272.655.569 0 .339-.257.571-.709.614v-1.195z" />
                                        <path d="M1 0a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h4.083q.088-.517.258-1H3a2 2 0 0 0-2-2V3a2 2 0 0 0 2-2h10a2 2 0 0 0 2 2v3.528c.38.34.717.728 1 1.154V1a1 1 0 0 0-1-1z" />
                                        <path d="M9.998 5.083 10 5a2 2 0 1 0-3.132 1.65 6 6 0 0 1 3.13-1.567" />
                                    </svg>
                                </div>
                                <div class="detail-content">
                                    <h5>Alerta</h5>
                                    @{
                                        TimeSpan diff = DateTime.Now - ViewBag.Loan.ExpectedReturnDate;
                                    }
                                    <p>Pr�stamo retrasado por  <strong>@(((int)(diff.TotalDays)))</strong> dias</p>
                                    <p>Se aplicar� una multa: @Fine.BaseFineAmount + @Fine.DailyIncrementAmount * @((int)(diff.TotalDays)) = S./ @(Fine.BaseFineAmount + Fine.DailyIncrementAmount * (int)(diff.TotalDays))</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <h4 class="section-title mt-4">Libros Prestados</h4>
                <div class="book-list">
                    @for(int i = 0; i < ViewBag.LoanDetails.Count; i++) {
                        <div class="book-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <div class="icon-circle me-3">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-book" viewBox="0 0 16 16">
                                            <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">@ViewBag.Books[i].Title</h6>
                                        <small class="text-muted">Código de ejemplar: @ViewBag.Copies[i].ISBN</small>
                                        @if(!string.IsNullOrEmpty(ViewBag.LoanDetails[i].Notes)) {
                                            <div class="mt-1">
                                                <small><strong>Notas:</strong> @ViewBag.LoanDetails[i].Notes)</small>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                 
                @if(!string.IsNullOrEmpty(ViewBag.Loan.Observations)) {
                    <h4 class="section-title mt-4">Observaciones</h4>
                    <div class="alert alert-secondary">
                        @ViewBag.Loan.Observations
                    </div>
                }

                <!-- Botones de acci�n -->
                <div class="d-flex justify-content-between mt-5">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                        <i class="fas fa-home me-1"></i> Volver al Inicio
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
