@model CreateBookModel;
@using TheSkibiditeca.Web.Models.BookModels
@using TheSkibiditeca.Web.Models.Entities

@{
    ViewData["Title"] = "Create";
    List<string> authors = [];
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="book-container">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="mb-0"><i class="fas fa-book me-2"></i>Agregar Nuevo Libro</h1>
                </div>

                <hr />

                <form asp-action="Create" asp-controller="Book" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <h4 class="section-title">Informaci�n B�sica</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group my-3">
                                <label asp-for="Book.Title" class="control-label"><i class="fas fa-heading me-1"></i> T�tulo</label>
                                <div class="icon-input">
                                    <i class="fas fa-pencil-alt"></i>
                                    <input required asp-for="Book.Title" class="form-control" placeholder="Ingresa el t�tulo del libro" />
                                </div>
                                <span asp-validation-for="Book.Title" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group my-3">
                                <label asp-for="Book.CategoryId" class="control-label"><i class="fas fa-tag me-1"></i> Categor�a</label>
                                <div class="icon-input">
                                    <i class="fas fa-list"></i>
                                    <select required asp-for="Book.CategoryId" class="form-control">
                                        <option value="" selected disabled>Selecciona una categor�a</option>
                                        @{
                                            foreach(Category cat in ViewBag.Categories) {
                                                <option value="@cat.CategoryId">@cat.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <span asp-validation-for="Book.CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group my-3">
                        <label asp-for="Book.Description" class="control-label"><i class="fas fa-align-left me-1"></i> Descripci�n</label>
                        <textarea asp-for="Book.Description" class="form-control" rows="4" placeholder="Proporciona una descripci�n del libro"></textarea>
                        <span asp-validation-for="Book.Description" class="text-danger"></span>
                    </div>

                    <h4 class="section-title">Detalles Adicionales</h4>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group my-3">
                                <label asp-for="Book.CoverImageUrl" class="control-label"><i class="fas fa-image me-1"></i> URL de la portada</label>
                                <div class="icon-input">
                                    <i class="fas fa-link"></i>
                                    <input required asp-for="Book.CoverImageUrl" class="form-control" type="url" placeholder="https://ejemplo.com/imagen.jpg" />
                                </div>
                                <span asp-validation-for="Book.CoverImageUrl" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group my-3">
                                <label asp-for="Book.PublicationYear" class="control-label"><i class="fas fa-calendar-alt me-1"></i> A�o de Publicaci�n</label>
                                <div class="icon-input">
                                    <i class="fas fa-calendar"></i>
                                    <input asp-for="Book.PublicationYear" class="form-control" type="number"
                                           min="1000" max="@DateTime.Now.Year"
                                           placeholder="Ej: 2023" />
                                </div>
                                <span asp-validation-for="Book.PublicationYear" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group my-3">
                                <label asp-for="Copies" class="control-label"><i class="fas fa-copy me-1"></i> Cantidad de copias</label>
                                <div class="icon-input">
                                    <i class="fas fa-hashtag"></i>
                                    <input required asp-for="Copies" class="form-control" type="number" min="1" placeholder="Ej: 5" />
                                </div>
                                <span asp-validation-for="Copies" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group my-3">
                        <label asp-for="Authors" class="control-label"><i class="fas fa-user-edit me-1"></i> Autores</label>
                        <select required asp-for="Authors" multiple class="form-select" size="5">
                            @{
                                foreach(Author author in ViewBag.Authors) {
                                    <option value="@author.AuthorId">@author.FullName</option>
                                }
                            }
                        </select>
                        <small class="form-text text-muted">Mant�n presionada la tecla Ctrl para seleccionar m�ltiples autores.</small>
                        <span asp-validation-for="Authors" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("List", "Book")" class="btn btn-outline-secondary align-content-center">
                            <i class="fas fa-arrow-left me-1"></i> Volver
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus-circle me-1"></i> Agregar Libro
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
