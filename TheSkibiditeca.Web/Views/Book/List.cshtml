@{
    var allBooks = (List<BookMiniCardModel>)ViewBag.AllBooks;
    int currentPage = (int)ViewData["CurrentPage"];
    int totalPages = (int)ViewData["TotalPages"];
    int pageSize = (int)ViewData["PageSize"];
    string currentFilter = (string)ViewData["CurrentFilter"];
}
@using TheSkibiditeca.Web.Models.ModelPartial

<div class="container text-light my-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Lista de libros</h1>

        <form asp-action="List" method="get" class="d-flex">
            <input type="text" name="searchStr" value="@currentFilter" class="form-control me-2" placeholder="Buscar por título...">
            <button type="submit" class="btn btn-custom-1">Buscar</button>
        </form>
    </div>

    <div class="d-flex justify-content-start">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="pageSizeDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                Mostrar @pageSize
            </button>
            <ul class="dropdown-menu" aria-labelledby="pageSizeDropdown">
                <li><a class="dropdown-item" href="?page=1&pageSize=30">30</a></li>
                <li><a class="dropdown-item" href="?page=1&pageSize=50">50</a></li>
                <li><a class="dropdown-item" href="?page=1&pageSize=100">100</a></li>
            </ul>
        </div>
        @{
            if(ViewBag.RoleID >= 2)
            {
                <a class="btn btn-custom-1 mx-4" asp-action="Create" asp-controller="Book">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                    </svg>
                </a>
            }
        }
    </div>

    @{
        if( allBooks.Count <= 0) {
            <h4 class="text-light text-center m-5">Sin resultados</h4>
        }else
        {
            <div class="row my-3">
                @foreach(var book in allBooks) {
                    <div class="col scrolled">
                        @await Html.PartialAsync("Partial/_BookMiniCard", book)
                    </div>
                }
            </div>
        }
    }


    <nav class="py-2">
        <ul class="pagination justify-content-center">
            <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                <a class="page-link" href="?page=@(currentPage - 1)&pageSize=@pageSize">Anterior</a>
            </li>

            @for(int i = currentPage - 2; i <= currentPage + 2; i++) {
                if(i >= 1 && i <= totalPages) {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i&pageSize=@pageSize">@i</a>
                    </li>
                }
            }

            <li class="page-item  @(currentPage >= totalPages ? "disabled" : "")">
                <a class="page-link" href="?page=@(currentPage + 1)&pageSize=@pageSize">Siguiente</a>
            </li>
        </ul>
    </nav>
</div>

