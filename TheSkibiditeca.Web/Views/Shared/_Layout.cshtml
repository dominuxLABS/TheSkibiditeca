@using Microsoft.AspNetCore.Identity
@using TheSkibiditeca.Web.Models.Entities
@inject UserManager<User> userManager
@inject ShoppingCart cart
@{
    var user = await userManager.GetUserAsync(User);
    var roleId = 1;
    if(user != null)
    {
        roleId = user.UserTypeId;
    }
    
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Skibiditeca</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TheSkibiditeca.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class=" navbar navbar-expand-sm navbar-toggleable-sm box-shadow rounded-3" style="background-image: linear-gradient(to right, #1e202c, #60519b)">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="~/img/pez_gato_w.png" alt="Logo" width="60"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5" />
                    </svg>
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light hov-underline mx-2" asp-controller="Book" asp-action="List">Libros</a>
                        </li>
                        @{
                            if(roleId >= 2)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light hov-underline mx-2" asp-controller="Loan" asp-action="Admin">Préstamos</a>
                                </li>
                            }

                            if(roleId >= 3)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light hov-underline mx-2" asp-controller="Home" asp-action="Index">Admin</a>
                                </li>
                            }
                        }
                    </ul>
                    @if(Context.User.Identity.Name == null)
                    {
                        <a class="btn btn-secondary mx-3" href="@Url.Action("Login", "Auth")">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart3 text-white" viewBox="0 0 16 16">
                                <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l.84 4.479 9.144-.459L13.89 4zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                            </svg>
                        </a>
                    } else {
                    <div class="dropdown justify-content-end mx-3">
                        <a class="btn btn-secondary text-white" href="@Url.Action("Create", "Loan")">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart3" viewBox="0 0 16 16">
                                <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l.84 4.479 9.144-.459L13.89 4zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                            </svg>
                                @if(cart.copies.Count != 0)
                                {
                                    @cart.copies.Count
                                }
                            </a>
                    </div>
                    }
                    

                    @await Html.PartialAsync("Partial/_UserInfo");
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="text-light">
        @RenderBody()
    </main>

    <footer class="footer text-muted bg-dark">
        <div class="container" style="color: gray">
            <div class="row justify-content-between">
                <div class="col">
                    &copy; TheSkibiditeca made with 💖 and 🍪☕
                </div>
                <div class="col text-right">
                    <ul class="d-flex justify-content-end list-unstyled m-0">
                        <li><a class="nav-link p-0 px-2 hov-underline-simple" style="color: gray" asp-controller="Home" asp-action="Privacy">Privacidad</a></li>
                        <li><a class="nav-link p-0 px-2 hov-underline-simple" style="color: gray" asp-controller="Home" asp-action="Credits">Créditos</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://unpkg.com/scrollreveal@4.0.0/dist/scrollreveal.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
